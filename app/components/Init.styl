.container
  display flex
  justify-content center
  align-items center
  width 100vw
  height calc(100vh - 35px)
  color #3B3E3C

.initialize
  display flex
  justify-content space-around
  align-items center
  width 200px
  height 200px
  flex-direction column

.circle
  width 50px
  height 50px
  display flex
  flex-wrap wrap
  position relative
  div:nth-child(2)
    animation-delay -1.0s
    background-color #69A2EF
  div
    position absolute
    width 100%
    height 100%
    border-radius 50%
    background-color #DEDEDE
    animation bounce 2.0s infinite ease-in-out

@keyframes bounce
  0%, 100%
    transform scale(0.0)
  50%
    transform scale(1.0)
