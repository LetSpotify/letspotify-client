.joinCreateRoom
  height calc(100vh - 40px)
  overflow hidden
  padding-top 40px
  width 100vw
  // font-family 'Architects Daughter', cursive
  // ::-webkit-input-placeholder
    // font-family 'Architects Daughter', cursive

.joinChoice
  position absolute
  background-color #FFFFFF
  border 1px solid #B5B5B5
  box-shadow 0px 0px 5px 3px #D9D9D9
  width 630px
  height 400px
  top calc(50% - 200px)
  left calc(50% - 300px)
  display flex
  justify-content center
  align-items center

.joinContent
  width 200px
  height 300px
  margin-left -310px
  display flex
  flex-direction column
  justify-content center
  align-items center
  svg
    fill #179790
    font-size 3rem
  input
    border none
    margin-top 10px
    padding 3px
    background-color transparent
    border-bottom 2px solid #179790
    // font-family 'Architects Daughter', cursive
    font-size 1em
    height 30px
    &:focus
      outline none

.createChoice
  position absolute
  width 350px
  height 400px
  background-color #179790
  top calc(50% - 200px - 4px)
  left calc(50% - 20px - 4px)
  -webkit-clip-path polygon(20% 0, 100% 0%, 100% 100%, 0 100%)
  box-shadow 5px 5px 4px 0px rgba(13, 13, 13, 0.5)
  display flex
  color #FFFFFF
  justify-content center
  align-items center

.createContent
  width 200px
  height 300px
  margin-left 50px
  margin-top 12px
  display flex
  flex-direction column
  justify-content center
  align-items center
  ::-webkit-input-placeholder
    color #D9ECE6
  svg
    font-size 3rem
  input
    border none
    margin-top 10px
    padding 3px
    background-color transparent
    border-bottom 2px solid #FFFFFF
    // font-family 'Architects Daughter', cursive
    font-size 1em
    color #FFFFFF
    height 30px
    &:focus
      outline none

.cancel
  position absolute
  width 40px
  height 40px
  margin-top 5px
  margin-left 4px
  cursor pointer
  &:hover
    .crossOne
      animation dashOne .2s .2s cubic-bezier(.5, 0, .5, 1) forwards
    .crossTwo
      animation dashTwo .2s cubic-bezier(.5, 0, .5, 1) forwards

.crossOne
  stroke-dasharray 25
  stroke-dashoffset 26

.crossTwo
  stroke-dasharray 23
  stroke-dashoffset -22

@keyframes dashTwo
  from
    stroke-dashoffset -22
  to
    stroke-dashoffset 0
@keyframes dashOne
  from
    stroke-dashoffset 26
  to
    stroke-dashoffset 0
