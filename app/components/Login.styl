.loginPage
  // background-color rgb(29, 34, 42)
  color #101010
  height calc(100vh - 35px)
  overflow hidden
  width 100vw
  // border-top 1px solid #F0F0F1
  display flex
  justify-content center
  align-items center

.loginCard
  width 285px
  height 450px
  background-color rgb(43, 50, 61)
  border-radius 10px
  overflow hidden
  color #FEFEFE

.cardTopSkew
  width 200%
  margin-left -60px
  margin-top: -50px
  height 40%
  background-color rgb(86, 211, 145)
  transform rotate(6deg)
  box-shadow 0px 2.5px 8px 0px #2A2A2A
  &:after
    content "LetSpotify"
    position absolute
    margin-top 100px
    margin-left 125px
    color #FEFEFE
    // font-family 'Architects Daughter', cursive
    font-size 2rem
    transform rotate(-6deg)

.loginSection
  width 100%
  h3
    // font-family 'Architects Daughter', cursive
    font-size 1.3rem
    width 100%
    height 100px
    text-align center
    line-height 100px

.loginButton
  background-color rgb(46, 70, 136)
  width 60px
  height 60px
  margin-left calc(50% - 30px)
  border-radius 30px
  box-shadow 0px 0px 10px 0px #1A1A1A
  transition all .2s ease
  margin-top 30px
  cursor pointer
  div
    width 4px
    height 20px
    display inline-block
    position absolute
    background-color #FAFAFA
    margin-top 20px
    left calc(50% - 29px)
    opacity 0
  for cnt in 1 2 3 4 5
    div:nth-child({cnt})
      margin-left cnt * 9px
  &:before
    content 'Login'
    position absolute
    // font-family 'Architects Daughter', cursive
    left calc(50% - 15px)
    font-size 1.3rem
    line-height 60px
    opacity 0
    transition all .2s ease
  &:after
    position absolute
    font-family FontAwesome
    content "\f09a"
    font-size 2.5em
    margin-top 50px
    left calc(50% - 12.5px)
    margin-top calc(25px - 12px)
    transition all .2s ease
  &:hover
    width 150px
    border-radius 30px
    margin-left calc(50% - 75px)
    transition all .5s ease
    &:before
      opacity 1
      transition all .2s .5s ease
    &:after
      left calc(50% - 60px)
      transition all .5s .2s ease

.loginPending
  background-color rgb(46, 70, 136)
  height 60px
  border-radius 30px
  margin-left calc(50% - 30px)
  box-shadow 0px 0px 10px 0px #1A1A1A
  width 60px
  text-align center
  transition all .3s ease
  margin-top 30px
  div
    width 4px
    height 20px
    display inline-block
    position absolute
    background-color #FAFAFA
    margin-top 20px
    left calc(50% - 29px)
    opacity 1
    transition opacity 5s .2s ease
  for cnt in 1 2 3 4 5
    div:nth-child({cnt})
      animation stretch 1.2s infinite
      animation-delay cnt * 0.1s
      margin-left cnt * 9px

@keyframes stretch
  0%, 40%, 100%
    transform scaleY(0.6)
  20%
    transform scaleY(1.2)
