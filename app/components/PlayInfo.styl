.roomInfo
  background-color #1C273B
  height calc(100vh - 40px)
  width 250px
  color #4B5362
  border-right 1px solid #010101

.playInfo
  width 250px
  height 280px

.playPic
  width 180px
  height 180px
  margin-left 35px
  margin-top 35px
  display flex
  justify-content center
  align-items center
  overflow hidden
  box-shadow 0px 7px 9px 0px rgba(25, 25, 25, 0.77)
  img
    max-width 180px
    height auto

.songName
  font-size 1.2rem
  width 100%
  height 30px
  line-height 30px
  padding-left 35px
  margin-top 5px
  color #FEFEFE

.albumName, .singerName
  font-size .9rem
  width 100%
  height 20px
  line-height 20px
  padding-left 35px
  color #DADADA

.members
  width 250px
  height 305px
  overflow-y scroll
  overflow-x hidden
  padding 0
  margin 0

.leaveRoom
  color white
  width calc(100% + 1px)
  height 50px
  display flex
  justify-content space-around
  align-items center
  transition background-color .2s .2s ease, opacity .2s ease
  &:hover
    background-color #263551
    opacity .8
    cursor pointer
    transition background-color .2s .2s ease, opacity .2s ease
