.roomInfo
  background-color #1C273B
  height calc(100vh - 35px)
  width 250px
  color #4B5362
  border-right 1px solid #010101

.playInfo
  width 250px

.playPic
  width 180px
  height 180px
  margin-left 35px
  margin-top 35px
  display flex
  justify-content center
  align-items center
  overflow hidden
  box-shadow 0px 7px 9px 0px rgba(25, 25, 25, 0.77)
  img
    max-width 180px
    height auto

.songName
  font-size 1.2rem
  width calc(100% - 70px)
  height 30px
  line-height 30px
  margin-left 35px
  margin-top 5px
  overflow hidden
  color #FEFEFE
  span
    white-space pre
    cursor default

.albumName, .singerName
  font-size .9rem
  width calc(100% - 70px)
  height 20px
  line-height 20px
  margin-left 35px
  color #DADADA
  span
    white-space pre
    cursor default


.members
  width 250px
  height 305px
  overflow-y scroll
  overflow-x hidden
  padding 0
  margin 0

.leaveRoom
  color white
  height 70px
  display flex
  align-items center
  span
    font-size 1.2rem
    &:before
      content '\f08b'
      font-family FontAwesome
      font-size 2rem

  &:hover
    background-color #263551
    cursor pointer
