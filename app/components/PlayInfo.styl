.roomInfo
  background-color #1C273B
  height calc(100vh - 35px)
  width 250px
  color #4B5362
  border-right 1px solid #010101

.playInfo
  width 250px

.playPic
  width 180px
  height 180px
  margin-left 35px
  margin-top 35px
  display flex
  justify-content center
  align-items center
  overflow hidden
  box-shadow 0px 7px 9px 0px rgba(25, 25, 25, 0.77)
  img
    max-width 180px
    height auto

.blank
  height 30px
  width 10px

.songName
  font-size 1.2rem
  width calc(100% - 70px)
  height 30px
  line-height 30px
  margin-left 35px
  margin-top 5px
  overflow hidden
  color #FEFEFE
  span
    white-space pre
    cursor default

.albumName, .singerName
  font-size .9rem
  width calc(100% - 70px)
  height 20px
  overflow hidden
  line-height 20px
  margin-left 35px
  color #DADADA
  span
    white-space pre
    cursor default


.members
  width 250px
  height 305px
  overflow-y scroll
  overflow-x hidden
  padding 0
  margin 0

.leaveRoom
  position relative
  color white
  height 70px
  i
    position absolute
    line-height 70px
    margin-left calc(50% - 15.6px)
    transition all .3s ease
  span
    position absolute
    font-size 1.2rem
    line-height 70px
    margin-left 110px
    opacity 0
  &:hover
    background-color #263551
    cursor pointer
    span
      margin-left 120px
      opacity 1
      transition all .5s .2s ease
    i
      margin-left 80px
      transition all .5s ease
