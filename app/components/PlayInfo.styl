.roomInfo
  background-color #EBEBEB
  height calc(100vh - 35px)
  width 250px
  border-right 1px solid #AEAEAE
  z-index 1

.playInfo
  width 250px

.playPic
  width 180px
  height 180px
  margin-left 35px
  margin-top 35px
  display flex
  justify-content center
  align-items center
  overflow hidden
  box-shadow 0px 7px 10px 0px rgba(25, 25, 25, 0.77)
  img
    max-width 180px
    height auto
    -webkit-user-select none

.blank
  height 30px
  width 10px

.songName
  font-size 1.2rem
  width calc(100% - 70px)
  height 30px
  line-height 30px
  margin-left 35px
  margin-top 5px
  overflow hidden
  color #3B3E3C
  span
    white-space pre
    cursor default

.albumName, .singerName
  font-size .9rem
  width calc(100% - 70px)
  height 20px
  overflow hidden
  line-height 20px
  margin-left 35px
  color #7B7B7B
  span
    white-space pre
    cursor default


.members
  width 250px
  height 305px
  overflow-y scroll
  overflow-x hidden
  padding 0
  margin 0

.leaveRoom
  position relative
  height 70px
  svg
    font-size 2.4rem
    transform rotateZ(180deg)
    position absolute
    margin-top 16px
    margin-left calc(50% - 15.6px)
    opacity .6
    transition all .3s ease
  span
    position absolute
    font-size 1.2rem
    line-height 70px
    opacity 0
    margin-left 130px
  &:hover
    background-color #F5F5F5
    cursor pointer
    span
      opacity 1
      transition all .5s .2s ease
    svg
      margin-left 60px
      opacity 1
      transition all .5s ease
