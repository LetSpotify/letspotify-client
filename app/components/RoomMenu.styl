.roomMenu
  background-color #22272C
  color #101010
  height calc(100vh - 35px)
  overflow hidden
  overflow-y scroll
  width 100vw
  border-top 1px solid #212121

.roomFilter
  width 100vw
  height 50px
  display flex
  justify-content center

.inputWrapper
  width 180px
  height 30px
  line-height 30px
  padding-left 10px
  margin-top 20px
  border-radius 50px
  background-color #1A1A1A
  &::before
    font-family FontAwesome
    content "\f002"
    padding-left 10px
    margin-right 5px
    color #545F68
  input
    border none
    background-color transparent
    font-size .85em
    width 120px
    color #FFFFFF
    height 30px
    &:focus
      outline none

.roomList
  width calc(100vw - 140px)
  padding-bottom 100px
  overflow-y scroll
  padding-left 80px
  display flex
  flex-direction row
  justify-content flex-start
  flex-wrap wrap

.roomAdd
  position absolute
  width 40px
  height 40px
  margin-top 12.5px
  margin-left calc(50vw - 163.5px)
  color #FEFEFE
  cursor pointer
