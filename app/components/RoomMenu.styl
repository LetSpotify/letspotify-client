.roomMenu
  background-color #22272C
  color #101010
  height calc(100vh - 40px)
  overflow hidden
  overflow-y scroll
  margin-top 40px
  width 100vw
  border-top 1px solid #F0F0F1

.roomFilter
  width 100vw
  height 50px
  display flex
  justify-content center

.inputWrapper
  width 180px
  height 30px
  line-height 30px
  padding-left 10px
  margin-top 20px
  border-radius 50px
  background-color #0D0F10
  &::before
    font-family FontAwesome
    content "\f002"
    padding-left 10px
    margin-right 5px
    color #545F68
  input
    border none
    background-color transparent
    font-size .85em
    width 120px
    color #FFFFFF
    height 30px
    &:focus
      outline none

.roomList
  width calc(100vw - 140px)
  padding-bottom 100px
  overflow-y scroll
  padding-left 70px
  padding-right 70px
  display flex
  flex-direction row
  flex-wrap wrap

.roomAdd
  position absolute
  width 40px
  height 40px
  margin-top 12.5px
  margin-left 438px
  color #FEFEFE
  &:hover
    cursor pointer
    .addOne
      animation dashOne .2s cubic-bezier(.5, 0, .5, 1) forwards
    .addTwo
      animation dashTwo .2s .2s cubic-bezier(.5, 0, .5, 1) forwards

.addOne
  stroke-dasharray 25
  stroke-dashoffset 26
.addTwo
  stroke-dasharray 23
  stroke-dashoffset -22

@keyframes dashOne
  from
    stroke-dashoffset 26
  to
    stroke-dashoffset 0

@keyframes dashTwo
  from
    stroke-dashoffset 22
  to
    stroke-dashoffset 0
