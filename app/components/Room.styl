.room
  width 234px
  height 260px
  background-color #303639
  margin-left 58px
  margin-right 58px
  margin-top 30px
  cursor pointer

.roomListPic
  width 180px
  height 180px
  margin-left 25px
  margin-top 15px
  border-radius 50%
  display flex
  justify-content center
  align-items center
  overflow hidden
  box-shadow 0px 0px 9px 0px rgba(25, 25, 25, 0.77)
  img
    width 100%
    height 100%
    user-select none
    -webkit-user-select none

.roomListName
  font-size 1.2rem
  font-style bold
  width 100%
  height 25px
  line-height 25px
  padding-left 25px
  margin-top 5px
  color #FEFEFE

.roomListMasterName
  font-size .9rem
  width 100%
  height 15px
  line-height 15px
  padding-left 25px
  color #DADADA
