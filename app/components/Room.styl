.room
  width 230px
  height 260px
  background-color #FAFAFA
  border: 1px solid #B5B5B5
  color #3B3E3C
  box-shadow 0px 0px 5px 3px #D9D9D9
  margin-left 58px
  margin-right 58px
  margin-top 30px
  cursor pointer
  &:hover
    border: 1.5px solid #179790

.roomListPic
  width 180px
  height 180px
  margin-left 25px
  margin-top 15px
  border-radius 50%
  display flex
  justify-content center
  align-items center
  overflow hidden
  box-shadow 0px 0px 7px .5px #3B3E3C
  img
    width 100%
    height 100%
    user-select none
    -webkit-user-select none

.roomListName
  font-size 1.2rem
  font-style bold
  width 100%
  height 25px
  line-height 25px
  padding-left 25px
  margin-top 5px
  color #3B3E3C

.roomListMasterName
  font-size .9rem
  width 100%
  height 15px
  line-height 15px
  padding-left 25px
  color #7B7B7B
